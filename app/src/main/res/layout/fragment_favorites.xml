<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="viewModel"
            type="com.darktheme.unitime.viewModels.FavoritesViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPost"
            >

            <Button
                android:id="@+id/profile_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/ic_back_vector"
                android:backgroundTint="@color/colorNormalText"
                android:rotation="180"
                style="?android:attr/borderlessButtonStyle"
                android:onClick="@{()->viewModel.onBackClick()}"
                />

            <com.mancj.materialsearchbar.MaterialSearchBar
                android:id="@+id/searchBar"
                style="@style/MaterialSearchBarLight"
                app:mt_speechMode="false"
                android:paddingRight="5dp"
                android:paddingVertical="5dp"
                app:mt_hint="search"
                app:mt_maxSuggestionsCount="0"
                app:mt_roundedSearchBarEnabled="true"
                app:mt_searchBarColor="@color/colorSearchBar"
                app:mt_hintColor="@color/colorHintText"
                app:mt_textColor="@color/colorNormalText"
                app:mt_navIconTint="@color/colorNormalText"
                app:mt_backIconTint="@color/colorNormalText"
                app:mt_searchIconTint="@color/colorNormalText"
                app:mt_clearIconTint="@color/colorNormalText"
                app:mt_placeholder="search in favorites"
                app:mt_placeholderColor="@color/colorHintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".views.Fragments.HierarchyFragment"
            android:background="@color/colorBackground">

            <LinearLayout
                android:id="@+id/folders_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginVertical="3dp"
                >
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</layout>