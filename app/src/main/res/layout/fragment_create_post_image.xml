<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Fragments.CreatePostImageFragment"
    android:layout_alignParentBottom="true"
    android:background="@color/colorBackground"
    >

    <EditText
        android:id="@+id/text_post"
        android:layout_marginHorizontal="30dp"
        android:hint="Enter text..."
        android:textColorHint="@color/colorHintText"
        android:textColor="@color/colorNormalText"
        android:maxLength="512"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tommy_regular"
        android:layout_marginTop="80dp"
        />


    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/text_post"
        android:layout_above="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/upload"
        android:layout_marginStart="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:fontFamily="@font/tommy_regular"
        android:backgroundTint="@color/colorPost"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/create_post_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"
        android:text="post"
        android:enabled="true"
        android:textColor="@color/colorNormalText"
        android:backgroundTint="@color/colorPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_default"/>


</RelativeLayout>