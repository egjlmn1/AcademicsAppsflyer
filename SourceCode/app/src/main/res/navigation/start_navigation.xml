<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_navigation"
    app:startDestination="@+id/nav_start">


    <fragment
        android:id="@+id/nav_start"
        android:name="com.darktheme.unitime.views.Fragments.Start.StartFragment"
        android:label="Start"
        tools:layout="@layout/fragment_start" >

        <action
            android:id="@+id/action_nav_start_to_email"
            app:destination="@id/email"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_nav_start_to_login"
            app:destination="@id/login"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/email"
        android:name="com.darktheme.unitime.views.Fragments.Start.EmailFragment"
        android:label="Email"
        tools:layout="@layout/fragment_email" >

        <action
            android:id="@+id/action_email_to_password"
            app:destination="@id/password"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left" />
        <argument
            android:name="error"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_email_to_nav_start"
            app:destination="@id/nav_start"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.darktheme.unitime.views.Fragments.Start.LoginFragment"
        android:label="Email"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_to_mainPageActivity"
            app:destination="@id/mainPageActivity"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@+id/nav_start"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/password"
        android:name="com.darktheme.unitime.views.Fragments.Start.PasswordFragment"
        android:label="Password"
        tools:layout="@layout/fragment_password" >
        <action
            android:id="@+id/action_password_to_name"
            app:destination="@id/name"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/name"
        android:name="com.darktheme.unitime.views.Fragments.Start.NameFragment"
        android:label="Name"
        tools:layout="@layout/fragment_name" >
        <action
            android:id="@+id/action_name_to_finish_register"
            app:destination="@id/finish_register"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/finish_register"
        android:name="com.darktheme.unitime.views.Fragments.Start.FinishRegisterFragment"
        android:label="Name"
        tools:layout="@layout/fragment_finish_register" >
        <action
            android:id="@+id/action_finish_register_to_build_profile"
            app:destination="@id/build_profile"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_finish_register_to_email"
            app:destination="@id/email"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_finish_register_to_mainPageActivity"
            app:destination="@id/mainPageActivity" />
    </fragment>
    <fragment
        android:id="@+id/build_profile"
        android:name="com.darktheme.unitime.views.Fragments.Start.BuildProfileFragment"
        android:label="Name"
        tools:layout="@layout/fragment_build_profile">

        <action
            android:id="@+id/action_to_mainPageActivity"
            app:destination="@id/mainPageActivity"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@+id/nav_start"
            app:popUpToInclusive="true"/>
    </fragment>
    <activity
        android:id="@+id/mainPageActivity"
        android:name="com.darktheme.unitime.views.Activities.MainPageActivity"
        android:label="MainPageActivity" />


</navigation>