<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="viewModel"
            type="com.darktheme.unitime.viewModels.PostsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPost"
            >

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/academics_profile"
                style="?android:attr/borderlessButtonStyle"

                android:onClick="@{() -> viewModel.onProfileClick()}"
                />

            <com.mancj.materialsearchbar.MaterialSearchBar
                android:id="@+id/searchBar"
                style="@style/MaterialSearchBarLight"
                app:mt_speechMode="false"
                android:paddingRight="5dp"
                android:paddingVertical="5dp"
                app:mt_hint="search"
                app:mt_maxSuggestionsCount="0"
                app:mt_roundedSearchBarEnabled="true"
                app:mt_searchBarColor="@color/colorSearchBar"
                app:mt_hintColor="@color/colorHintText"
                app:mt_textColor="@color/colorNormalText"
                app:mt_navIconTint="@color/colorNormalText"
                app:mt_backIconTint="@color/colorNormalText"
                app:mt_searchIconTint="@color/colorNormalText"
                app:mt_clearIconTint="@color/colorNormalText"
                app:mt_placeholder="search for whatever you want"
                app:mt_placeholderColor="@color/colorHintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </androidx.appcompat.widget.Toolbar>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/colorBackground">


                    <LinearLayout
                        android:id="@+id/posts_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/extra_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorBackground"
                            android:layout_marginBottom="10dp">

                            <RelativeLayout
                                android:id="@+id/extra_container"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/flair_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </RelativeLayout>

                            <Spinner
                                android:id="@+id/flair_spinner"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="20dp"
                                android:dropDownWidth="150dp"
                                android:backgroundTint="@color/colorNormalText"
                                android:spinnerMode="dropdown"
                                android:dropDownVerticalOffset="40dp"
                                android:dropDownHorizontalOffset="30dp"
                                android:popupBackground="@color/colorPost"
                                />

                        </RelativeLayout>



                        <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/posts_recycler_view"
                        tools:viewBindingIgnore="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>


</layout>